{
  "compilerOptions": {
    // File Layout
    "rootDir": "./src",
    "outDir": "./dist",

    // Environment Settings
    "module": "commonjs",
    "target": "ES2020",

    // Recommended Options
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,

    // Type Definitions
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["src"]
}
